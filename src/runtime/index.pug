doctype html
html
  head
    title {{STORY_NAME}}
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    if inlineAssets
      style !{rollup.bundle['index.css'].source.toString()}
    else
      link(rel="stylesheet", href="index.css")
  body
  html
  head
  body
    form#cb-validation(action='javascript:void(0)')
      button#cb-validation-tester(hidden='')
      button#cb-block-enter-key(hidden='')
      #backdrop
        #page(aria-live='polite')
          header
            .left
            .center
            .right
          article
          ul.warnings
          article.connection-client
            .connection-client_host
              button#host-game(type="button")
                | Host
              button#join-game(type="button")
                | Join
            div#session-connection.connection-client_client
              label#session-label(for="session-id")
                | Session ID:
              input#session-id(type="text")
            #connection-status.connection-client_status
              | Not Connected
          footer
            .left
            .center
            .right
          #spinner
            include spinner.svg
    | !{storyData}
    if inlineAssets
      script !{rollup.bundle['index.js'].code}
    else
      script(src="index.js")